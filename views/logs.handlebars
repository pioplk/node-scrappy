<table class="ui stripped compact table unstackable logs">
    <thead>
    <tr>
        <th>
            {{name}} LOGS
            <button class="ui icon mini red basic button right floated" onclick="clearLogs()">
                <i class="trash alternate outline icon"></i> Clear logs</button>
        </th>
    </tr>
    </thead>
    <tbody>
    {{#each logs}}
         <tr>
            <td>{{this}}</td>
        </tr class="center aligned">
    {{/each}}

        </tbody>
</table>

<script>
    async function postData(url = '', data = {}) {
        const response = await fetch(url, {
            method: 'POST',
            body: JSON.stringify(data),
            headers: {
                'Content-Type': 'application/json'
            },

        });
        return response.json();
    }

    async function clearLogs(){
        await postData(window.location.href, {logs: []});
        window.location.reload();
    }
</script>